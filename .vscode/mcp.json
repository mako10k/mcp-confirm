{
	"servers": {
		"mcp-search": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"@mako10k/mcp-search@latest"
			],
			"env": {
				"GOOGLE_API_KEY": "${input:google_api_key}",
				"GOOGLE_CX": "${input:google_cx}"
			}
		},
		// "mcp-confirm": {
		// 	"type": "stdio",
		// 	"command": "npx",
		// 	"args": [
		// 		"@mako10k/mcp-confirm@latest"
		// 	],
		// 	"env": {}
		// }
		"mcp-confirm": {
			"type": "stdio",
			"command": "npm",
			"args": [
				"start"
			],
			"env": {
				"MCP_CONFIRM_LOG_PATH": "${workspaceFolder}/.mcp-data/confirmation_history.log"
			}
		},
		"mcp-shell-server": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"@mako10k/mcp-shell-server@latest"
			],
			"env": {
				"MCP_SHELL_DEFAULT_WORKDIR": "${workspaceFolder}",
				"MCP_SHELL_ALLOWED_WORKDIRS": "${workspaceFolder},/tmp,/workspaces",
				"MCP_SHELL_SECURITY_MODE": "permissive",
				"MCP_LOG_LEVEL": "info"
			}
		}
	},
	"inputs": [
		{
			"id": "google_api_key",
			"type": "promptString",
			"description": "Google API Key"
		},
		{
			"id": "google_cx",
			"type": "promptString",
			"description": "Google Custom Search Engine ID"
		}
	]
}