{
	"servers": {
		"mcp-search": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"@mako10k/mcp-search@2.0.0"
			],
			"env": {
				"GOOGLE_API_KEY": "${input:google_api_key}",
				"GOOGLE_CX": "${input:google_cx}"
			}
		},
		"mcp-confirm": {
			"type": "stdio",
			"command": "node",
			"args": [
				"dist/index.js"
			],
			"cwd": "${workspaceFolder}",
			"dev": {
				"watch": "dist/**/*.js",
				"debug": { "type": "node" }
			}
		}
	},
	"inputs": [
		{
			"id": "google_api_key",
			"type": "promptString",
			"description": "Google API Key"
		},
		{
			"id": "google_cx",
			"type": "promptString",
			"description": "Google Custom Search Engine ID"
		}
	]
}